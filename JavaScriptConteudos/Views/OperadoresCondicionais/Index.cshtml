<h4>JavaScript For</h4>
<!-- Exemplo Nº 4 -->
<p id="ex4"></p>
<script>
    const carros = ["BMW", "Volvo", "Saab", "Ford", "Fiat", "Audi"];

    let texto = "";
    for (let i = 0; i < carros.length; i++) {
        texto += carros[i] + "<br>";
    }

    document.getElementById("ex4").innerHTML = texto;
</script>
