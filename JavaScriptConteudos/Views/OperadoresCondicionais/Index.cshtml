<h4>Condição If</h4>
<!-- Exemplo Nº 2 -->

<p>Exibir "Bom dia!" se a hora for inferior às 18:00:</p>
<p id="ex2"></p>
<script>
    const hora = new Date().getHours();
    let saudacao;

    if (hora < 18) {
        saudacao = "Bom dia";
    } else {
        saudacao = "Boa noite";
    }

    document.getElementById("ex2").innerHTML = saudacao;
</script>

