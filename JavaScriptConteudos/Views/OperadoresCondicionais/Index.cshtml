<h4>Interruptor de JavaScript</h4>
<!-- Exemplo Nº 3 -->
<p id="ex3"></p>
<script>
    let dia;
    switch (new Date().getDay()) {
        case 0:
            dia = "Domingo";
            break;
        case 1:
            dia = "Segunda-Feira";
            break;
        case 2:
            dia = "Terça-Feira";
            break;
        case 3:
            dia = "Quarta-Feira";
            break;
        case 4:
            dia = "Quinta-Feira";
            break;
        case 5:
            dia = "Sexta-Feira";
            break;
        case 6:
            dia = "Sábado";
    }
    document.getElementById("ex3").innerHTML = "Hoje é " + dia;
</script>

